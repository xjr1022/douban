.home {
    width: 100%;
    height: 100%;
}
.header {
    margin-left: 25rpx;
}
.header .title {
    font-weight: bold;
}
.section {
    display: flex;
    justify-content: space-around;
    margin: 0 15rpx;
    flex-wrap: wrap;
}
.item {
    margin-top: 20rpx;
    display: flex;
    flex-direction:column;
}
.item-img {
    width: 220rpx;
    height: 300rpx;
    border-radius: 10rpx;
}
.item-title {
    font-size: 26rpx;
}
.item-score {
    font-size: 23rpx;
    color: grey;
}
.item-star-container{
    display: inline;
}
.item-star {
    width: 24rpx;
    height: 22.8rpx;
}